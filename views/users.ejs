<!DOCTYPE html>

<html>
    <head>
        <title>User List</title>

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>

    <body>
        
        <h2 style="margin: 20px">User List</h2><hr>

        <div class="container-fluid">
            <div class="row">
                <nav class ="navbar bg-dark"><ul class ="nav navbar-nav">
                    <li class ="nav-item"><a  href="/products/dashboard">Home</a></li>
                    <li class ="nav-item"><a  href="/products/shopping-list">Shopping list</a></li>
                    <li class ="nav-item"><a  href="/users">User List</a></li>
                    <li class ="nav-item"><a  href="/users/logout">Logout</a></li>
                </ul></nav>
                <div>
                    <a href="/users/user" class="btn btn-success" role="button">Add new</a>
                </div>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>email</th>
                        <th>Role</th>
                    </tr>
                    </thead>
                    
                    <% users.forEach((res) => { %>
                    <tbody>
                    <tr>
                        <td><%= res.name %></td>
                        <td><%= res.email %></td>
                        <td><%= res.role %></td>
                        
                    </tr>
                    </tbody>
                    <% }) %>
                </table>
                
                
            </div>
                
        </div>
    </body>
</html>